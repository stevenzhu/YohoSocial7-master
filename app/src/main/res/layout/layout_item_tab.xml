<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">
    <!--android:layout_gravity="center"-->

    <im.quar.autolayout.view.AutoFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10px"
        android:paddingBottom="10px">

        <com.yoho.glide.GlideImageView
            android:id="@+id/tabIcon"
            android:layout_width="60px"
            android:layout_height="60px"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/nvg_message_normal"
            />

        <com.iyoho.social.view.TypeFaceTextView
            android:id="@+id/msgCount"
            android:layout_width="25px"
            android:layout_height="25px"
            android:layout_marginTop="2px"
            android:layout_gravity="top|right"
            android:gravity="center"
            android:background="@drawable/shape_message_count"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:text="12"/>
        <!--android:text="10"-->
    </im.quar.autolayout.view.AutoFrameLayout>

    <com.iyoho.social.view.TypeFaceTextView
        android:id="@+id/tabText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/selector_tab_text"
        android:textSize="14sp"
        android:text="首页"/>
    <!--android:text="@string/app_name_en"-->
</LinearLayout>