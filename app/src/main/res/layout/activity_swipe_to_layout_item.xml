<?xml version="1.0" encoding="utf-8"?>
<im.quar.autolayout.view.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent">
<im.quar.autolayout.view.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <com.yoho.glide.GlideImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/weatherIcon"
        android:layout_width="200px"
        android:layout_height="200px"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10px"
        app:shape_type="rectangle"
        app:pressed_color="#ffffff"
        />
    <im.quar.autolayout.view.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:layout_marginRight="10px"
        android:layout_marginLeft="10px"
        android:orientation="vertical">
        <com.iyoho.social.view.TypeFaceTextView
            android:id="@+id/cityNm"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textSize="40px"
            android:gravity="center_vertical"/>
        <com.iyoho.social.view.TypeFaceTextView
            android:id="@+id/daysTv"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textSize="40px"
            android:gravity="center_vertical"/>
        <com.iyoho.social.view.TypeFaceTextView
            android:id="@+id/weekTv"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textSize="40px"
            android:gravity="center_vertical"/>
        <com.iyoho.social.view.TypeFaceTextView
            android:id="@+id/temperatureTv"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textSize="40px"
            android:gravity="center_vertical"/>
        <com.iyoho.social.view.TypeFaceTextView
            android:id="@+id/weatherTv"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:textSize="40px"
            android:gravity="center_vertical"/>
    </im.quar.autolayout.view.AutoLinearLayout>
</im.quar.autolayout.view.AutoLinearLayout>
</im.quar.autolayout.view.AutoLinearLayout>
