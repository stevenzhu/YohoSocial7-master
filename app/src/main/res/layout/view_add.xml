<?xml version="1.0" encoding="utf-8"?>
<im.quar.autolayout.view.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <im.quar.autolayout.view.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#e8e7e6">

        <im.quar.autolayout.view.AutoLinearLayout
            android:id="@+id/lbs_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="160px"
            android:layout_marginLeft="70px"
            android:layout_marginTop="@dimen/sendIconMarginSize"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/sendIconSize"
                android:layout_height="@dimen/sendIconSize"
                android:src="@drawable/tabbar_compose_lbs"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="签到"
                android:textColor="#666666"
                android:textSize="26px"/>
        </im.quar.autolayout.view.AutoLinearLayout>

        <im.quar.autolayout.view.AutoLinearLayout
            android:id="@+id/review_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/lbs_btn"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/sendIconSize"
                android:layout_height="@dimen/sendIconSize"
                android:src="@drawable/tabbar_compose_review"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="点评"
                android:textColor="#666666"
                android:textSize="26px"/>
        </im.quar.autolayout.view.AutoLinearLayout>

        <im.quar.autolayout.view.AutoLinearLayout
            android:id="@+id/more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/lbs_btn"
            android:layout_marginRight="70px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/sendIconSize"
                android:layout_height="@dimen/sendIconSize"
                android:src="@drawable/tabbar_compose_more"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="更多"
                android:textColor="#666666"
                android:textSize="26px"/>
        </im.quar.autolayout.view.AutoLinearLayout>

        <im.quar.autolayout.view.AutoLinearLayout
            android:id="@+id/idea_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/lbs_btn"
            android:layout_alignLeft="@id/lbs_btn"
            android:layout_marginBottom="30px"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/sendIconSize"
                android:layout_height="@dimen/sendIconSize"
                android:src="@drawable/tabbar_compose_idea"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="文字"
                android:textColor="#666666"
                android:textSize="26px"/>
        </im.quar.autolayout.view.AutoLinearLayout>

        <im.quar.autolayout.view.AutoLinearLayout
            android:id="@+id/photo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/review_btn"
            android:layout_alignTop="@id/idea_btn"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/sendIconSize"
                android:layout_height="@dimen/sendIconSize"
                android:src="@drawable/tabbar_compose_photo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="照片/视频"
                android:textColor="#666666"
                android:textSize="26px"/>
        </im.quar.autolayout.view.AutoLinearLayout>

        <im.quar.autolayout.view.AutoLinearLayout
            android:id="@+id/weibo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/more_btn"
            android:layout_alignTop="@id/idea_btn"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/sendIconSize"
                android:layout_height="@dimen/sendIconSize"
                android:src="@drawable/tabbar_compose_weibo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="头条文章"
                android:textColor="#666666"
                android:textSize="26px"/>
        </im.quar.autolayout.view.AutoLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/idea_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100px"
            android:text="blog.csdn.net/ruancoder"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="26px"/>
    </im.quar.autolayout.view.AutoRelativeLayout>

    <im.quar.autolayout.view.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarSize"
        android:background="#ffffff"
        android:gravity="center"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/close"
            android:layout_width="75px"
            android:layout_height="75px"
            android:src="@drawable/tabbar_compose_background_icon_close"/>
    </im.quar.autolayout.view.AutoLinearLayout>
</im.quar.autolayout.view.AutoLinearLayout>
